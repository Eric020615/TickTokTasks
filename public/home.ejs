<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage - TickTockTasks</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="CSS/ckc.css">
    <script src="https://kit.fontawesome.com/10eadcceed.js" crossorigin="anonymous"></script>

</head>

<body>
    <div class="row">
        <!-- SideNavBar -->
        <section class="sidebar d-none d-md-block min-vh-100 col-auto position-fixed">
            <a href="/home" class="logo">
                <h4>TickTokTasks</h4>
            </a>
            <ul class="sidemenu">
                <li>
                    <a href="/home" class="sidebar-active">
                        <i class="fa-solid fa-house"></i>
                        <span class="text">Home</span>
                    </a>
                </li>
                <li>
                    <a href="/task">
                        <i class="fa-solid fa-list"></i>
                        <span class="text">Task</span>
                    </a>
                </li>
                <li>
                    <a href="/calendar">
                        <i class="fa-solid fa-calendar-days"></i>
                        <span class="text">Calendar</span>
                    </a>
                </li>
                <li>
                    <a href="/profile">
                        <i class="fa-solid fa-user"></i>
                        <span class="text">Profile</span>
                    </a>
                </li>
                <li>
                    <a href="/settings-general">
                        <i class="fa-solid fa-gear"></i>
                        <span class="text">Settings</span>
                    </a>
                </li>
                <li>
                    <a href="/about-us">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <span class="text">About Us</span>
                    </a>
                </li>
                <li>
                    <a href="/logout">
                        <i class="fa-solid fa-sign-out"></i> 
                        <span class="text">Log Out</span>
                    </a>
                </li>
            </ul>
        </section>
        <div class="bg-semidark d-md-none"></div>
        <!-- SideNavBar -->

        <section class="main container-sm col">
                <main>
                <!-- Top -->
                <div class="top d-md-none ">
                    <a href="#" > 
                        <div class="toggle-nav-btn ">
                            <i class="fa-solid fa-bars fa-xl"></i>
                        </div>
                    </a>
                    <a href="#">
                        <h4 class="logo-top">TiktokTask</h4>
                    </a>
                </div>
                <!-- Top -->
                <div class="head">
                    <h1>Welcome, <%= user.email %></h1>
                    <span class="text-danger">You have <%= today_list.length  %> tasks today.</span>
                </div>
        
                <h4 id = "date"> MONDAY,  APRIL 10 </h4>
                <ol class="home-view-task p-2 ">
                <% if(today_list.length){ %>
                    <% for(list of today_list){ %>
                        <li>
                            <h5> <%= list.title %> </h5>
                            <div class="d-flex justify-content-between row-cols-2">
                                <span class="col-8" id="remaining-time"> <i class="fa-solid fa-clock-rotate-left"></i> &nbsp;&nbsp; <%= list.date %> </span> 
                                <button type = "button" class = "btn btn-done col" onclick="done_task()">Done</button>
                            </div>
                        </li>
                    <% } %>
                <% } %>
                </ol>
                </main>
        </section>
    </div>
    <script src="Assests/JS/home.js"></script>
    <script>
        const timer = document.querySelector('#date');
        timer.innerHTML = new Date();
        setInterval(()=>{
            let date = new Date();
            timer.innerHTML = date;
        },1000);

    </script>
</body>

</html>